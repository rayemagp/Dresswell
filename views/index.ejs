<!DOCTYPE html>
<html ng-app="thisApp">
  <head>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src='/javascripts/angular.js'></script>
    <script src='/javascripts/module.js'></script>
    <script src='/javascripts/recommend.js'></script>
  </head>
  <body ng-controller="thisController">
        <div class="col-xs-2"></div>
        <div class="col-xs-8" id="title">DRESSWELL</div>
        <div class="col-xs-1">popular</div>
        <div class="col-xs-1">history</div>
        <div id="choicebar" class="col-xs-12">
            <div class="col-xs-4 btn-default" ng-click="btnhighlight(this);">match my wardrobe</div>
            <div class="col-xs-4 btn-danger" ng-click="show = true;generate = false;">give me an outfit</div>
            <div class="col-xs-4 btn-default" ng-click="show = true;generate = false;">general advice</div>
        </div>
        <div class="col-xs-12" id="consult" ng-show="show">

            <!-- UPLOADING-->
            <img class="img-responsive" src="/images/noupload.png" onclick="this.src='/images/staticupload.png'">

            <!-- MAIN FORM -->
            <div class="form-group col-xs-12">
                <input type="text" class="col-xs-11 form-control " id="inputGroupSuccess1" placeholder="Preferences">
                <textarea type="text" class="col-xs-11 form-control " id="inputGroupSuccess2" placeholder="Other Details"></textarea>
            </div>
                <submit class="btn-success col-xs-12" ng-click="show = ! show; generate = !generate;" >Match my Outfit!</submit>

        </div>
        <div class="col-xs-12" id="generate" ng-show="generate">
            <div ng-repeat="outfit in recommendations[0]">
                <div class="col-md-3" ng-repeat="item in outfit">
                    <a ng-href="{{item.link}}">
                    <img class="img-responsive" ng-srcset="{{item.photo}}">
                        <div class="clothingitem">
                            <div>{{item.brand}} {{item.name}}</div>
                            <div>{{item.price}}</div>
                        </div>
                    </a>
                </div >
            </div>
        </div>
  </body>
</html>
